{
    "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "complexity": {
                "noUselessEmptyExport": "off"
            },
            "style": {
                "useConst": {
                    "level": "warn",
                    "fix": "unsafe"
                }
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space"
    }
}
